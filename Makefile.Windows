#
# Macros for linking .EXE/.DLL/.PYD
#
ifeq ($(CC),gcc)
  define link_EXE
    $(call green_msg, Linking $(BRIGHT_WHITE)$(strip $(1)))
    $(call create_resp_file, link.args, $(LDFLAGS) $(2) $(ASAN_LIBS))
    $(_CC) -o $(1) @link.args 2> link.tmp
    @echo
  endef

  #
  # A more complex .DLL link macro for gcc / lld-link.
  #
  # Export everything since a .def-file seems impossible with 'lld-link'.
  #
  define link_DLL
    $(call green_msg, Linking $(BRIGHT_WHITE)$(strip $(1)))
    $(call create_resp_file, link.args,                 \
           -shared $(LDFLAGS)                           \
           -Wl$(comma)--out-implib$(comma)$(strip $(3)) \
           -Wl$(comma)--export-all-symbols              \
           $(ASAN_LIBS) $(2))
    $(_CC) -o $(1) @link.args 2> link.tmp
    @echo
  endef

  define link_PYD
    $(call green_msg, Linking $(BRIGHT_WHITE)$(strip $(1)))
    $(call create_resp_file, link.args, -shared $(LDFLAGS) \
           $(PY_ROOT)/libs/python$(USE_PY_BINDING).lib     \
           -Wl$(comma)--export-all-symbols                 \
           $(ASAN_LIBS) $(2))
    $(_CC) -o $(1) @link.args 2> link.tmp
    @echo
  endef

else
  define link_EXE
    $(file  > $(OBJ_DIR)/check-for-unused-libs.py,if 1:)
    $(file >> $(OBJ_DIR)/check-for-unused-libs.py,$(CHECK_FOR_UNUSED_LIBS_PY))
    $(call green_msg, Linking $(BRIGHT_WHITE)$(strip $(1)))
    $(call create_resp_file, link.args, $(LDFLAGS) $(2) $(ASAN_LIBS))
    link -out:$(strip $(1)) @link.args > link.tmp
    @rm -f $(1:.exe=.exp)
    @$(PYTHON) $(OBJ_DIR)/check-for-unused-libs.py link.tmp
  endef

  define link_DLL
    $(file  > $(OBJ_DIR)/check-for-unused-libs.py,if 1:)
    $(file >> $(OBJ_DIR)/check-for-unused-libs.py,$(CHECK_FOR_UNUSED_LIBS_PY))
    $(call green_msg, Linking $(BRIGHT_WHITE)$(strip $(1)))
    $(call create_resp_file, link.args, -dll $(LDFLAGS) -implib:$(strip $(3)) $(ASAN_LIBS) $(2))
    link -out:$(strip $(1)) @link.args > link.tmp
    @rm -f $(3:.lib=.exp)
    @$(PYTHON) $(OBJ_DIR)/check-for-unused-libs.py link.tmp
  endef

  #
  # Create a Python .PYD-module from objects.
  #   arg1, $(1): The .pyd file.
  #   arg2, $(2): The .$(O) file(s), extra args and libs.
  #   arg3, $(3): The name of the Python init function.
  #
  define link_PYD
    $(file  > $(OBJ_DIR)/check-for-unused-libs.py,if 1:)
    $(file >> $(OBJ_DIR)/check-for-unused-libs.py,$(CHECK_FOR_UNUSED_LIBS_PY))
    $(call green_msg, Linking $(BRIGHT_WHITE)$(strip $(1)))
    $(call create_resp_file, link.args, -dll $(LDFLAGS) -libpath:$(PY_ROOT)/libs \
                             -export:$(strip $(3)) $(ASAN_LIBS) $(2))
    link -out:$(strip $(1)) @link.args > link.tmp
    @rm -f $(1:.pyd=.exp) $(1:.pyd=.lib)
    @$(PYTHON) $(OBJ_DIR)/check-for-unused-libs.py link.tmp
  endef
endif

