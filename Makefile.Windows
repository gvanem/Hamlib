          -I./security       \
          -I./tests          \
          -I./$(OBJ_DIR)     \
          -DUSE_RECURSIVE_MUTEX=0


_CC = $(CC)
_RC = rc

ifeq ($(CC),clang-cl)
  RCFLAGS += -D__clang__
  CFLAGS  += -fms-compatibility \
             -ferror-limit=5    \
             -Wno-unused-command-line-argument

  #
  # Add this warnings that breaks MSVC:
  #   rigs/kenwood/kenwood.c(2850,19): warning: variable length array used [-Wvla]
  #    2850 |     char levelbuf[expected_length + 1];
  #         |                   ^~~~~~~~~~~~~~~~~~~
  #
  CFLAGS += -Wvla

  #
  # Due to an old 'clang-cl' compiler on Appveyor
  #
  ifeq ($(ON_APPVEYOR),1)
    CFLAGS += -Wno-unknown-warning-option
  else
    CXXFLAGS += -std:c++17
  endif

else ifeq ($(CC),cl)
  RCFLAGS += -D_MSC_VER

  #
  # Due to an old 'cl' compiler on Appveyor
  #
  ifeq ($(ON_APPVEYOR),1)
    #
    # Fix for this harmless warning
    #   C4047: '==': 'RIG *' differs in levels of indirection from 'int'
    #
    CFLAGS += -wd4047
  else
    CFLAGS   += -diagnostics:caret
    CXXFLAGS += -std:c++17 -Zc:__cplusplus
  endif

else
  #
  # Only LLVM-MinGW is supported. This one:
  # https://github.com/mstorsjo/llvm-mingw/releases/
  #
  # Need to use the 'LLVM_MINGW' as prefix in case a Cygwin 'gcc' or something
  # else is before it in the PATH.
  #
  LLVM_MINGW := $(realpath $(LLVM_MINGW))

  _AR = $(LLVM_MINGW)/bin/ar
  _CC = $(LLVM_MINGW)/bin/gcc
  _RC = $(LLVM_MINGW)/bin/windres

  ifeq ($(CPU),x64)
    LLVM_BIN = $(LLVM_MINGW)/x86_64-w64-mingw32/bin
    RCFLAGS += --target=pe-x86-64
  else
    LLVM_BIN = $(LLVM_MINGW)/i686-w64-mingw32/bin
    RCFLAGS += --target=pe-i386
  endif

  RCFLAGS  += -D__LLVM_MINGW
  CFLAGS   += -Wvla
endif

#
# ASAN build settings:
#
# This works best:
#   c:\> set ASAN_OPTIONS=print_stats=1:windows_hook_legacy_allocators=1:color=always:halt_on_error=0
#
# Refs:
#   https://docs.microsoft.com/en-us/cpp/sanitizers/asan?view=msvc-160
#   https://github.com/google/sanitizers/wiki/AddressSanitizer
#   https://github.com/google/sanitizers/wiki/AddressSanitizerFlags
#
ifeq ($(USE_ASAN),1)
  CFLAGS  += -DUSE_ASAN -fsanitize=address
  RCFLAGS += -DUSE_ASAN

  ifeq ($(CC),gcc)
    CFLAGS += -shared-libsan

   COPY_DLLs += $(addprefix $(LLVM_BIN)/, \
                  libunwind.dll           \
                  libc++.dll              \
                  libclang_rt.asan_dynamic-$(SUFFIX).dll)
  else
    LDFLAGS += -inferasanlibs:no

    ifeq ($(CC),clang-cl)
      $(info Detected 'CLANG_ROOT=$(realpath $(CLANG_$(BITS)))' for 'USE_ASAN=1'.)

      LDFLAGS += -libpath:$(realpath $(CLANG_$(BITS)))/lib/clang/$(CLANG_MAJOR_VER)/lib/windows
    else
      LDFLAGS += -libpath:$(realpath $(VCToolkitInstallDir))/lib/$(CPU)
    endif
  endif

  ASAN_LIBS = $(call OS_lib_names, clang_rt.asan_dynamic-$(SUFFIX).lib \
                                   clang_rt.asan_dynamic_runtime_thunk-$(SUFFIX).lib)

else
  ASAN_LIBS =
endif

