ifeq ($(CC),gcc)
  O = o
  CHECKS = check_llvm_mingw

  CFLAGS = -m$(BITS) -Wall \
           --include ./include/hamlib/config.h

  CXXFLAGS = -std=c++17
  LDFLAGS  = -m$(BITS) -Wl$(comma)--verbose -static-libgcc -lpthread  # -std=gnu11

  #
  # LLVM-MinGW now support .PDB-files.
  #
  LDFLAGS += -Wl,--pdb=

  RCFLAGS = -O COFF --use-temp-file

  OS_lib_names = $(addprefix -l,$(subst .lib,,$(1)))
  O_out        = -o $(1)
  CPP_LIB      = -lc++
  MUNICODE     = -municode

else
  O = obj
  CHECKS =
  CFLAGS = -nologo -MD -Zi -O2 -W3   \
           -Fd./$(OBJ_DIR)/vc14x.pdb \
           -FI./include/hamlib/config.h

  CXXFLAGS = -EHsc

  LDFLAGS = -nologo -debug -incremental:no -verbose \
            -machine:$(CPU) -nodefaultlib:uuid.lib

  RCFLAGS = -nologo

  OS_lib_names = $(1)
  O_out        = -Fo./$(strip $(1))
  CPP_LIB      =
  MUNICODE     =
endif

